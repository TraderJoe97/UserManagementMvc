@page
@model UserManagementMvc.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <section>
            <form method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label class="form-check-label" asp-for="Input.RememberMe"></label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

    <div class="col-md-6">
        <section>
            <h4>Use another service to log in.</h4>
            <hr />
            <form asp-page="./ExternalLogin" method="post">
                <div>
                    <button type="submit" class="btn btn-outline-dark" name="provider" value="GitHub">
                        <i class="bi bi-github"></i> Login with GitHub
                    </button>
                </div>
                <div class="mt-2">
                    <button type="submit" class="btn btn-outline-danger" name="provider" value="Google">
                        <i class="bi bi-google"></i> Login with Google
                    </button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
